@{
    Layout = "_LayoutDeslogado";
}

@if (TempData["MsgSucesso"] != null)
{
    <div class="alert-success">
        @TempData["MsgSucesso"]
    </div>
}

@if (TempData["MsgErro"] != null)
{
    <div class="alert-danger">
        @TempData["MsgErro"]
    </div>
}

@model Login

<div class="text-center">
    <h4 class="display-4"><strong>Login</strong></h4>
</div>

<form class="row g-3" asp-controller="Login" asp-action="BuscarLogin">
    <div class="col-md-6 position-absolute top-50 start-50 translate-middle">
        <label formaction="inputEmail4" class="form-label">Usuário</label>
        <input type="email" class="form-control" id="inputEmail4" asp-for="Email"/>
        <label for="inputPassword4" class="form-label">Senha</label>
        <input type="password" class="form-control" id="inputPassword" asp-for="Senha"/>
        <br />

        <div class="col-12 justify-content-center ">
            <button class="btn btn-primary btn-sm" role="button">Entrar</button>
        </div>
    </div>
</form>
