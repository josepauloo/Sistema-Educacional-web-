@model Aluno

<div class="text-center">
    <h4 class="display-4"><strong>EDITE AS INFORMAÇÕES DO ALUNO</strong></h4>
</div>

<form method="post" asp-area="" asp-controller="Aluno" asp-action="EditarAluno">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label for="nome">Nome do Aluno:</label>
        <input type="text" asp-for="Nome" id="nome" name="nome" class="form-control" placeholder="Informe o nome">
    </div>
    <div class="form-group">
        <label for="idade">Idade do Aluno:</label>
        <input type="number" asp-for="Idade" id="idade" name="idade" class="form-control" placeholder="Informe a idade">
    </div>
    <div class="form-group">
        <label for="matrícula">Matrícula do Aluno:</label>
        <input type="number" asp-for="Matrícula" id="matrícula" name="matrícula" class="form-control" placeholder="Informe a matrícula">
    </div>
    <div class="form-group">
        <label for="cep">CEP:</label>
        <input type="text" asp-for="Cep" id="cep" name="cep" class="form-control" placeholder="Informe o CEP">
    </div>
    <br />
    <div class="btn-group">
        <button type="submit" class="btn btn-primary">Alterar</button>

        <button type="button" class="btn btn-secondary">
            <a class="nav-link text-white" asp-area="" asp-controller="Aluno" asp-action="Index">Voltar</a>
        </button>
    </div>
   
</form>
