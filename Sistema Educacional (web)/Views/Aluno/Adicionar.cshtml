@model Aluno

<div class="text-center">
    <h4 class="display-4"><strong>ADICIONE UM ALUNO</strong></h4>
</div>

<form method="post" asp-area="" asp-controller="Aluno" asp-action="InserirAluno">
    <div class="form-group">
        <label for="nome">Nome:</label>
        <input type="text" asp-for="Nome" id="nome" name="nome" class="form-control" placeholder="Informe o nome do aluno">
    </div>
    <div class="form-group">
        <label for="idade">Idade:</label>
        <input type="number" asp-for="Idade" id="idade" name="idade" class="form-control" placeholder="Informe a idade do aluno">
    </div>
    <div class="form-group">
        <label for="matrícula">Matrícula:</label>
        <input type="number" asp-for="Matrícula" id="matrícula" name="matrícula" class="form-control" placeholder="Informe a matrícula do aluno">
    </div>
    <div class="form-group">
        <label for="cep">CEP:</label>
        <input type="text" asp-for="Cep" id="cep" name="cep" class="form-control" placeholder="Informe o CEP do aluno">
    </div>
    <br />
    <div class="btn-group">
        <button type="submit" class="btn btn-primary">Adicionar</button>

        <button type="button" class="btn btn-secondary">
            <a class="nav-link text-white" asp-area="" asp-controller="Aluno" asp-action="Index">Voltar</a>
        </button>
    </div>
</form>

