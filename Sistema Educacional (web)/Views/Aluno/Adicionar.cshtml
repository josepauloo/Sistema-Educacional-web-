<form method="post" asp-area="" asp-controller="Aluno" asp-action="Adicionar">
    <div class="form-group">
        <label for="nome">Nome do Aluno:</label>
        <input type="text" id="nome" name="nome" class="form-control" placeholder="Informe o nome">
    </div>
    <div class="form-group">
        <label for="idade">Idade do Aluno:</label>
        <input type="number" id="idade" name="idade" class="form-control" placeholder="Informe a idade">
    </div>
    <div class="form-group">
        <label for="matrícula">Matrícula do Aluno:</label>
        <input type="number" id="matrícula" name="matrícula" class="form-control" placeholder="Informe a matrícula">
    </div>
    <div class="form-group">
        <label for="cep">CEP:</label>
        <input type="text" id="cep" name="cep" class="form-control" placeholder="Informe o CEP">
    </div>

    <button type="submit" class="btn btn-primary">Adicionar</button>
</form>
